datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favorites         Favorite[]
  pushSubscriptions PushSubscription[]
  notificationLogs  NotificationLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  playerId   String   // Slug or ID from our system
  playerName String   // For display/fallback
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, playerId])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NotificationLog {
  id        String   @id @default(cuid())
  userId    String
  matchId   String   // Unique string identifying the match
  sentAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, matchId])
}

// ============================================
// Tournament & Match Data Models
// ============================================

model Tournament {
  id          String    @id @default(cuid())
  externalId  String    @unique  // e.g., "qatar-major-2024"
  name        String
  year        Int
  category    String?   // Major, P1, P2
  location    String?
  dateStart   DateTime?
  dateEnd     DateTime?
  imageUrl    String?
  status      String?   // live, upcoming, finished
  
  matches     Match[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([year])
  @@index([dateStart])
  @@index([name])
}

model Match {
  id            String      @id @default(cuid())
  externalId    String?     // From scraper if available
  tournamentId  String
  tournament    Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  
  round         String?     // Final, Semi-Final, Quarter-Final, etc.
  court         String?
  category      String?     // Men, Women
  status        String?     // live, finished, scheduled
  
  team1Player1  String
  team1Player2  String?
  team2Player1  String
  team2Player2  String?
  
  team1Seed     String?
  team2Seed     String?
  
  team1Flag1    String?
  team1Flag2    String?
  team2Flag1    String?
  team2Flag2    String?
  
  score         String?     // JSON array stored as string: ["6-4", "7-5"]
  
  scheduledTime DateTime?
  timezone      String?
  
  year          Int
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([tournamentId])
  @@index([team1Player1])
  @@index([team1Player2])
  @@index([team2Player1])
  @@index([team2Player2])
  @@index([year])
  @@index([round])
}

model Player {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  country     String?
  countryCode String?
  countryFlag String?
  imageUrl    String?
  
  currentRank Int?
  peakRank    Int?
  points      Int?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([slug])
  @@index([currentRank])
}

